\DeclareOptionBeamer{shadow}[true]{\def\beamer@themerounded@shadow{#1}}
\ExecuteOptionsBeamer{shadow=false}
\ProcessOptionsBeamer

\defbeamertemplate*{title page}{information}[1][]
{
	% Texte
	\begin{textblock*}{11cm}(0cm, -1cm)
		\begin{flushleft}
			\begin{beamercolorbox}[wd=11cm, ht=5pt, left, ignorebg, #1]{titlepage}
%				\usebeamerfont{title}
				\huge{\textbf{\inserttitle}}
				\insertsubtitle
			\end{beamercolorbox}
		\end{flushleft}
	\end{textblock*}
	% Barre tricolore
	\begin{textblock*}{7.8cm}(1.5cm, 2.2cm)
		\begin{beamercolorbox}[sep=2pt, wd=2cm, ht=10pt, left, ignorebg, #1]{titlepage}
			\input{../beamertheme/extra/barre_tricolore_garde.tex}
		\end{beamercolorbox}
	\end{textblock*}
	\begin{textblock*}{6cm}(7cm, 3.2cm)
	    \begin{beamercolorbox}[#1]{titlepage}
		    \large
			\insertauthor \\
		    \insertdate
		\end{beamercolorbox}
	\end{textblock*}
	\begin{textblock*}{2.5cm}(-0.3cm, 2.6cm)
	    \includegraphics[width=\textwidth]{../beamertheme/extra/logo.png}
	\end{textblock*}
}

\mode<presentation>

%Commande de titre
\newcommand{\inserttitlepage}[0]{
	\frame[plain]{\titlepage}
}

\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{itemize item}[square]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[default]
\setbeamertemplate{sections/subsections in toc}[square]
\setbeamertemplate{title page}[information][]
\setbeamertemplate{part page}[default][colsep=-4bp,rounded=true,shadow=\beamer@themerounded@shadow]
\setbeamertemplate{footline}[frame number]

\mode<all>